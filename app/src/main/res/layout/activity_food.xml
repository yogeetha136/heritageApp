<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FoodActivity">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Scrollable Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/btnBack"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="8dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:padding="8dp">

                <Button
                    android:id="@+id/btnChennai"
                    android:text="Chennai"
                    android:backgroundTint="#FF6F61"
                    android:textColor="#FFFFFF"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    android:layout_columnWeight="1"
                    android:textStyle="bold"
                    android:longClickable="true" />

                <Button
                    android:id="@+id/btnMadurai"
                    android:text="Madurai"
                    android:backgroundTint="#FFD166"
                    android:textColor="#000000"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    android:layout_columnWeight="1"
                    android:textStyle="bold"
                    android:longClickable="true" />


            <Button
                android:id="@+id/btnCoimbatore"
                android:text="Coimbatore"
                android:backgroundTint="#06D6A0"
                android:textColor="#FFFFFF"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnTrichy"
                android:text="Trichy"
                android:backgroundTint="#118AB2"
                android:textColor="#FFFFFF"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSalem"
                android:text="Salem"
                android:backgroundTint="#EF476F"
                android:textColor="#FFFFFF"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnTirunelveli"
                android:text="Tirunelveli"
                android:backgroundTint="#073B4C"
                android:textColor="#FFFFFF"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnErode"
                android:text="Erode"
                android:backgroundTint="#F4A261"
                android:textColor="#000000"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnThoothukudi"
                android:text="Thoothukudi"
                android:backgroundTint="#264653"
                android:textColor="#FFFFFF"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnVellore"
                android:text="Vellore"
                android:backgroundTint="#8D99AE"
                android:textColor="#000000"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnTanjavur"
                android:text="Tanjavur"
                android:backgroundTint="#D81159"
                android:textColor="#FFFFFF"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnTirupur"
                android:text="Tirupur"
                android:backgroundTint="#3A86FF"
                android:textColor="#FFFFFF"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSivakasi"
                android:text="Sivakasi"
                android:backgroundTint="#8338EC"
                android:textColor="#FFFFFF"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnKancheepuram"
                android:text="Kancheepuram"
                android:backgroundTint="#FF9F1C"
                android:textColor="#000000"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnPollachi"
                android:text="Pollachi"
                android:backgroundTint="#2EC4B6"
                android:textColor="#FFFFFF"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnVirudhunagar"
                android:text="Virudhunagar"
                android:backgroundTint="#6A0572"
                android:textColor="#FFFFFF"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:textStyle="bold" />
            <Button
                android:id="@+id/btnDharmapuri"
                android:text="dharmapuri"
                android:backgroundTint="#6A0578"
                android:textColor="#FFFFFF"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:textStyle="bold" />

        </GridLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
